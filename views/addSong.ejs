<%- include("partials/header") -%>

    <div class="container"></div>

     <h3>Add Song to Playlist:</h3>
     <form action="/playlists/<%= playlist._id %>/songs" method="POST" enctype="multipart/form-data">

            <div class="form-group">
                <label for="artist">Artist:</label>
                <input type="text" id="artist" name="artist" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="song">Select a song:</label>
                <input type="file" id="song" name="song" accept="audio/*" class="form-control-file" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add Song</button>
            </div>
        </form>

    </div>

<%- include('partials/footer.ejs') -%>