<%- include('partials/header.ejs') -%>
<div class="container mt-4">
  <h1>Create Playlist and Upload your songs</h1>

  <% if (flash.error) { %>
    <div class="alert alert-danger"><%= flash.error %></div>
  <% } else if (flash.success) { %>
    <div class="alert alert-success"><%= flash.success %></div>
  <% } %>

  <form action="/upload" method="POST" enctype="multipart/form-data">
    
    
    <div class="form-group">
      <label for="artist">PlayList name:</label>
      <input type="text" id="artist" name="artist" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="song">Select a song:</label>
      <input type="file" id="song" name="song" accept="audio/*" class="form-control-file" required>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Upload</button>
    </div>
  </form>
</div>

<%- include('partials/footer.ejs') -%>
